{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/noahjzc/viewer-schema/refs/heads/main/view/view-column.schema.json",
  "title": "View Column Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the column"
    },
    "fixed": {
      "type": "boolean",
      "description": "Whether the column is fixed",
      "default": false
    },
    "visible": {
      "type": "boolean",
      "description": "Whether the column is visible",
      "default": true
    },
    "width": {
      "type": "string",
      "description": "The width of the column"
    },
    "sortOrder": {
      "enum": [
        "descend",
        "ascend"
      ]
    }
  },
  "required": [
    "name",
    "fixed",
    "visible"
  ]
}